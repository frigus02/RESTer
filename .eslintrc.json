{
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "sourceType": "script"
    },
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "crockford",
        "prettier"
    ],
    "rules": {
        "no-continue": 0,
        "no-plusplus": 0,
        "no-underscore-dangle": 0,
        "no-use-before-define": 0,
        "no-control-regex": 0,
        "no-var": 2,
        "one-var": 0,
        "strict": 2
    },
    "ignorePatterns": ["build/"]
}
